@{ 
    var unoServices = BasinSevice64.WebPages.Model.SolutionHelper.USDal.GetAllUnoServices();
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Работы</th>
                            <th>Стоимость</th>
                            <th>Примечание</th>
                            @if (User.Identity.IsAuthenticated)
	                        {
                                <th>Админ</th>
	                        }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in unoServices)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Price</td>
                                <td>@item.Annotation</td>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <td><a href="~/pages/admin/uno_service_update.cshtml?ID=@item.ID"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a><a href="~/pages/admin/uno_service_delete.cshtml?ID=@item.ID"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
