@using BasinSevice64.WebPages.Model;

@{ 
    if (!User.Identity.IsAuthenticated)
    {
        Response.StatusCode = 400;
        Response.End();
    }

    var queries = SolutionHelper.QDal.GetAllQueries();
}

<div class="row">
    <div class="col-lg-12">
        @foreach (var query in queries)
        {
            <div class="panel panel-info">
                <div class="panel-body">
                    <p>Номер запроса: @query.ID</p>
                    <p>Имя: @query.Name</p>
                    <p>Сообщение: @query.Message</p>
                    <p>Телефон: @query.PhoneNumber</p>
                    <p>Электронная почта: @query.Email</p>
                    <p>Дата: @query.Date</p>
                    <a href="~/pages/admin/queries_delete.cshtml?ID=@query.ID">Удалить запрос</a>
                </div>
            </div>
        }
    </div>
</div>